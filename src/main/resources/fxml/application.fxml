<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<Pane 
    xmlns="http://javafx.com/javafx/17" 
    xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="com.github.phoswald.sample.ApplicationController">
  <VBox spacing="15">
    <padding>
       <Insets bottom="15" left="15" right="15" top="15"/>
    </padding>
    <HBox spacing="15">
      <Button fx:id="clearButton" text="Clear" prefWidth="100" prefHeight="30"/>
      <Button fx:id="drawCanvasButton" text="Draw Canvas" prefHeight="30"/>
      <Button fx:id="updateImageButton" text="Update Image" prefHeight="30"/>
    </HBox>
    <HBox spacing="15">
      <Canvas fx:id="canvas" width="512" height="512"/>
      <ImageView fx:id="imageView"/>
    </HBox>
  </VBox>
</Pane>
